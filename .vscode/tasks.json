{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "go",
    "isShellCommand": true,
    "problemMatcher":[
        "$go"
    ],
    "windows": {
        "args": ["build", "-v", "-o", "bin/game.exe"]
    },
    "linux": {
        "args": ["build", "-v", "-o", "bin/game"]
    },
    "osx": {
        "args": ["build", "-v", "-o", "bin/game"]
    },

    "tasks": [
        {
            "taskName": "install engine",
            "suppressTaskName": true,
            "command": "go",
            "args": ["install", "-v", "./Engine/Map", "./Engine"]
        }
    ],

    "showOutput": "always"
}